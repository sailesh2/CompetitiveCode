x=raw_input().split(' ')
n=int(x[0])
k=int(x[1])
if k>float(n)/2:
    print "-1"
else:
    print k*n
    i=1
    while i<=n:
        j=1
        while j<=k:
            if i+j==n:
                print i,n
            else:
                print i,(i+j)%n
            j=j+1
        i=i+1
