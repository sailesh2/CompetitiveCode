x=raw_input().split(' ')
n=int(x[0])
t=int(x[1])
c=int(x[2])
arr=[]
y=raw_input().split(' ')
i=0
while i<n:
    arr.append(int(y[i]))
    i=i+1
i=0
ctr=0
j=0
while i<n:
    if arr[i]<=t:
        if j==c-1:
            ctr=ctr+1
        else:
            j=j+1
    else:
        j=0
    i=i+1
print ctr
